{
  "version": 2,
  "workers": [
    {
      "type": "router",
      "realms": [
        {
          "name": "realm1",
          "roles": [
            {
              "name": "anonymous",
              "permissions": [
                {
                  "uri": "",
                  "match": "prefix",
                  "allow": {
                    "call": true,
                    "register": true,
                    "publish": true,
                    "subscribe": true
                  },
                  "disclose": {
                    "caller": false,
                    "publisher": false
                  },
                  "cache": true
                }
              ]
            }
          ]
        }
      ],
      "transports": [
        {
          "type": "web",
          "endpoint": {
            "type": "tcp",
            "port": 8080
          },
          "paths": {
            "/": {
              "type": "static",
              "directory": "../web"
            },
            "ws": {
              "type": "websocket",
              "options": {
                "auto_ping_interval": 10000,
                "auto_ping_timeout": 20000
              }
            },
            "ws-client": {
              "type": "websocket"
            }
          }
        }
      ],
      "options": {
        "pythonpath": [".."]
      },
      "components": [
        {
          "type": "class",
          "classname": "history.HistorySession",
          "realm": "realm1"
        },
        {
          "type": "class",
          "classname": "agency_rpcs.AgencyRPCSession",
          "realm": "realm1"
        }
      ]
    }
  ]
}
